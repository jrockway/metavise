<html>
  <head>
    <title>[% title | html %]</title>
    <script type="text/javascript" src="[% js('jquery-1.4.4') %]"></script>
    <script type="text/javascript" src="[% js('underscore') %]"></script>
    <script type="text/javascript" src="[% js('backbone') %]"></script>
    <script type="text/javascript" src="[% js('socket') %]"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="stylesheet" href="[% css('1140') %]" type="text/css" media="screen" />

