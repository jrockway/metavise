  <div id="topname" class="threecol">
    <a href="[% c.uri_for('/') | html %]">
      <img alt="metavise logo: a telescope"
           src="[% png('telescope') %]" />
    </a>
  </div>
  <div class="sixcol"><p id="appname">Metavise</p></div>
  <div class="threecol last"><br id="rightlogo"/></div>
</div>
[% content %]
</div>
